generator client {
    provider = "prisma-client-js"
}

datasource db {
    url = env("DATABASE_URL")
    provider = "mongodb"
}

model User {
    id    String @id @default(auto()) @map("_id") @db.ObjectId
    name String
    email String
    imageUrl String
    posts Post[]
}

model Post {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  image String
  title String
  owner User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId
}